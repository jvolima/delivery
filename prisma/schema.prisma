generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Deliveryman {
  id       String @id @default(uuid())
  username String @unique
  password String

  @@map("deliveryman")
  Delivery Delivery[]
}

model Client {
  id       String @id @default(uuid())
  username String @unique
  password String

  @@map("clients")
  Delivery Delivery[]
}

model Delivery {
  id        String @id @default(uuid())
  id_client String
  client    Client @relation(fields: [id_client], references: [id])

  id_deliveryman String
  deliveryman    Deliveryman @relation(fields: [id_deliveryman], references: [id])

  item_name  String
  created_at DateTime @default(now())
  end_at     DateTime

  @@map("deliveries")
}
